<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ai.basic.mapper.BaseUserMapper">

    <select id="customQuery" resultType="org.ai.basic.model.base.BaseUser" parameterType="org.ai.basic.dto.user.req.UserQueryReqDTO">
        SELECT id, username, nickname, email, create_time, update_time FROM user
        <where>
            <if test="query != null and query != ''">
                (username LIKE CONCAT('%', #{query}, '%') OR nickname LIKE CONCAT('%', #{query}, '%'))
            </if>
        </where>
        <if test="sort != null and sort != ''">
            ORDER BY ${sort} ${direction}
        </if>
    </select>
</mapper>